<?xml version="1.0" encoding="utf-8"?>
<struts-config>
	
	<form-beans>
			<form-bean name="nameForm" type="org.apache.struts.action.DynaActionForm">
				<form-property name="firstName" type="java.lang.String" />
				<form-property name="lastName" type="java.lang.String" />
				<form-property name="middleInitial" type="java.lang.String" />
			</form-bean>
			<form-bean name="addressForm" type="org.apache.struts.action.DynaActionForm">
				<form-property name="address" type="java.lang.String" />
				<form-property name="city" type="java.lang.String" />
				<form-property name="state" type="java.lang.String" />
				<form-property name="zipcode" type="java.lang.Integer" />
				<form-property name="countrycode" type="java.lang.Integer" />
				<form-property name="areacode" type="java.lang.Integer" />
				<form-property name="phoneNumber" type="java.lang.Integer" />
			</form-bean>
			<form-bean name="degreeForm" type="org.apache.struts.action.DynaActionForm">
				<form-property name="major" type="java.lang.Integer" />
				<form-property name="title" type="java.lang.String" />
				<form-property name="month" type="java.lang.Integer" />
				<form-property name="year" type="java.lang.Integer" />
				<form-property name="gpa" type="java.lang.Integer" />
			</form-bean>
	</form-beans> 	

	<action-mappings>
		<action path="/name"
				type="CSE135S.Struts.dataentry.actions.NameAction"
				scope="request"
				name="nameForm"
				input="/name.jsp">
			<forward name="success" path="/countryOfCitizenship.do" />
			<forward name="failure" path="/name.jsp" /> 
		</action>
		
		<action path="/countryOfCitizenship"
				type="CSE135S.Struts.dataentry.actions.CitizenshipAction">
			<forward name="success" path="/countryOfCitizenship.jsp" />
		</action>
		
		<action path="/countryOfResidence"
				type="CSE135S.Struts.dataentry.actions.ResidenceAction">
			<forward name="success" path="/countryOfResidence.jsp" />
		</action>
		
		<action path="/processResidence"
				type="CSE135S.Struts.dataentry.actions.ProcessResidenceAction" >
			<forward name="success" path="/address.jsp" />
		</action>
		
		<action path="/address"
				type="CSE135S.Struts.dataentry.actions.AddressAction"
				name="addressForm"
				scope="request"
				validate="true"
				input="/address.jsp">
			<forward name="success" path="/verifyResidence.do" />
			<forward name="failure" path="/address.jsp" />
		</action>
		
		<action path="/verifyResidence" 
				type="CSE135S.Struts.dataentry.actions.VerifyResidenceAction" >
			<forward name="verify" path="/verifyResidence.jsp" />
			<forward name="success" path="/provideDegreeLocation.do" />
		</action>
		
		<action path="/provideDegreeLocation" 
				type="CSE135S.Struts.dataentry.actions.ProvideDegreeLocationAction"
				input="/verifyResidence.jsp" >
			<forward name="success" path="/provideDegreeLocation.jsp" />
		</action>
		
		<action path="/provideDegreeUniversity"
				type="CSE135S.Struts.dataentry.actions.ProvideDegreeUniversityAction">
			<forward name="success" path="/provideDegreeUniversity.jsp" />
		</action>
		
		<action path="/provideDegreeMajor"
				type="CSE135S.Struts.dataentry.actions.ProvideDegreeMajorAction">
			<forward name="success" path="/provideDegreeMajor.jsp" />
		</action>
		
		<action path="/processDegree"
				type="CSE135S.Struts.dataentry.actions.ProcessDegreeAction"
				name="degreeForm"
				scope="request"
				validate="true"
				input="/provideDegreeMajor.jsp">
			<forward name="success" path="/verifyDegrees.jsp" />
			<forward name="failure" path="/provideDegreeMajor.do" />
		</action>
		
		<action path="/submitApplication"
				type="CSE135S.Struts.dataentry.actions.SubmitApplicationAction">
			<forward name="success" path="confirmApplication.jsp" />
		</action>
		
		<action path="/cancelApplication"
				type="CSE135S.Struts.dataentry.actions.CancelApplicationAction">
			<forward name="success" path="/name.jsp" />
		</action>
	</action-mappings>

</struts-config>